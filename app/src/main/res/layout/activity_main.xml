<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#efefef">

    <RelativeLayout
        android:id="@+id/main_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:padding="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_3"
        android:elevation="10dp">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/calm"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/main_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="A more mindful you"
        android:textSize="20sp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_txt1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="building your meditation experience"
        android:textSize="17sp"
        android:textColor="#7E7D7D"/>

    <TextView
        android:id="@+id/name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/email_txt"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@+id/main_txt1"
        android:layout_toLeftOf="@+id/main_txt1"
        android:text="Name :"
        android:textColor="#000000"
        android:textSize="17sp"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/email"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/name_txt"
        android:textColor="#000000"
        android:textSize="17sp"
        />


    <TextView
        android:id="@+id/email_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/logout"
        android:layout_marginBottom="50dp"
        android:layout_toStartOf="@+id/main_txt1"
        android:layout_toLeftOf="@+id/main_txt1"
        android:text="Email :"
        android:textColor="#000000"
        android:textSize="17sp"
         />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/logout"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/email_txt"
        android:textColor="#000000"
        android:textSize="17sp"
        />

    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/bg_2"
        android:text="LOGOUT"
        android:textColor="#ffffff"
        android:textSize="27sp"
        android:textStyle="bold"
        android:elevation="20sp"/>


</RelativeLayout>